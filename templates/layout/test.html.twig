{% block body %}
<style>
    .navbar .navbar-brand {color: #C82829;}
    #navbarNavAltMarkup .navbar-nav a{padding: 0 100px;}

</style>

<nav class="navbar container-fluid navbar-expand-lg navbar-light bg-light">
