    {% block javascripts %}

        <script>
            $(document).ready(function(){

                $(".create-card-link").click(function(){
                    $.ajax({url: "/card-creat", success: function(result){
                            $("Container").html(result);
                        }});
                });
                $(".create-category-link").click(function(){
                    $.ajax({url: "/category-create", success: function(result){
                            $("Container").html(result);
                        }});
                });
            });
        </script>
